package Bootcampday2;


	import java.util.Scanner;
	import java.util.Arrays;
	public class Anagram {
		

		//import arrays class from util package

	

		//create class anagram

			   public static void main(String args[]) 

			   {

				   //create 2 strings  ie, string1 and string2 to store input values

			      String str1 = "bat";

			      String str2 = "abt";

			      //check if condition

			      //if length of two string are equal the enter the if loop



			      if (str1.length()==str2.length())

			      {

			    	  //if convert string to charecter we use tocharArray method

			         char[] arr1 = str1.toCharArray();

			         //Arrays.sort method is used to sort the arrays 

			         Arrays.sort(arr1);

			         

			         char[] arr2 = str2.toCharArray();

			       //Arrays.sort method is used to sort the arrays

			         Arrays.sort(arr2);

			         //check if the two strings are anagram or not

			         if(Arrays.equals(arr1,arr2))

			         {

			        	 //printing output value

			            System.out.println(" anagram ");

			         } //end of if block

			         else 

			         {

			        	//printing output value

			            System.out.println(	 " not anagrams");

			         }

			      }

			   }//end of main method

			}//end of class block

			
